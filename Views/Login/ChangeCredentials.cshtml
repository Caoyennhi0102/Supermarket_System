@{
    ViewBag.Title = "Thay Đổi Thông Tin Đăng Nhập";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/ChangeCredentials.css"> <!-- Đảm bảo đường dẫn đúng -->
</head>
<body>
    <div class="container">
        <h2>Thay Đổi Thông Tin Đăng Nhập</h2>

        @using (Html.BeginForm("ChangeCredentials", "ChangeCredentials", FormMethod.Post))
        {
            <div class="form-container">
                <div>
                    <label for="newUsername">Tên đăng nhập mới:</label>
                    <input type="text" id="newUsername" name="newUsername" required />
                </div>

                <div>
                    <label for="newPassword">Mật khẩu mới:</label>
                    <input type="password" id="newPassword" name="newPassword" required />
                </div>

                <button type="submit">Cập nhật</button>
            </div>
        }
    </div>
</body>
</html>
