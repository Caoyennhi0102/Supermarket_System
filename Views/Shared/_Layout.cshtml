<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Page.Title - Hệ THỐNG QUẢN LÝ SIÊU THỊ</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/sidebar.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


    @RenderSection("head", required: false)




</head>
<body>

    <!-- Container for the layout -->
    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-md-3 sidebar">
                <div class="logo">
                   
                    <div class="logo text-center">
                        <img src="~/wwwrot/Image/logoAdminHome.png" alt="Logo" class="img-fluid" />
                    </div>
                </div>
                <div class="list-group">

                  @*  @if (Session["UserName"] != null)
                    {
                      *@
                        <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#employeeFunctions" aria-expanded="false" aria-controls="employeeFunctions">
                            QUẢN LÝ NHÂN VIÊN
                        </a>
                        <div class="collapse" id="employeeFunctions">
                            <a href="/Admin/AddEmployee" class="list-group-item list-group-item-action">Thêm nhân viên</a>
                            <a href="/Admin/UpdateEmployee" class="list-group-item list-group-item-action">Cập nhật thông tin nhân viên</a>
                            <a href="/Admin/DeleteEmployee" class="list-group-item list-group-item-action">Xóa Nhân Viên</a>


                        </div>
                        <!-- Nút Logout -->
                        <a href="@Url.Action("Logout", "Admin")" class="list-group-item list-group-item-action text-danger">
                            <i class="bi bi-box-arrow-right"></i> Đăng xuất
                        </a>
                    @*
                    }
                    else
                    {
                        *@
                        <!-- Hiển thị đăng nhập nếu người dùng chưa đăng nhập -->
                        <a href="@Url.Action("Login", "Admin")" class="list-group-item list-group-item-action">
                            <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                        </a>
                    @*}*@
                    </div>
                </div>
                <!-- Main Content Area -->
                <div class="col-md-9">
                    @RenderBody()


                </div>
            </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
