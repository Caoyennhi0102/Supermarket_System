<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Page.Title - Hệ THỐNG QUẢN LÝ SIÊU THỊ</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    @RenderSection("head", required: false)
    <link href="~/wwwrot/sidebar.css" rel="stylesheet" />
</head>
<body>

    <!-- Container for the layout -->
    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-md-3 sidebar">
                <div class="logo">
                    <img src="~/wwwrot/Image/logoAdminHome.png" alt="Logo" class="img-fluid" />
                </div>
                <div class="list-group">
                    <!-- Menu Quản lý nhân viên -->
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#employeeFunctions" aria-expanded="false" aria-controls="employeeFunctions">
                        QUẢN LÝ NHÂN VIÊN 
                    </a>
                    <div class="collapse" id="employeeFunctions">
                        <a href="/Admin/AddEmployee" class="list-group-item list-group-item-action">Thêm nhân viên</a>
                        <a href="/Admin/EmployeeList" class="list-group-item list-group-item-action">Cập nhật thông tin nhân viên</a>
                        <a href="/Admin/EmployeeReports" class="list-group-item list-group-item-action">Xóa Nhân Viên</a>
                    </div>
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
